import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class BD {
    // URL de conexión al servidor MySQL
    private static final String URL  = "jdbc:mysql://localhost:3306/retosdb?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC";

    // Usuario y contraseña que configuraste
    private static final String USER = "retosuser";   // o root si prefieres
    private static final String PASS = "retospass";   // o la contraseña que pusiste

    // Método para obtener la conexión
    public static Connection conectar() throws SQLException {
        return DriverManager.getConnection(URL, USER, PASS);
    }

    // Método de prueba para comprobar conexión
    public static void main(String[] args) {
        try (Connection conn = conectar()) {
            System.out.println("✅ Conexión exitosa a la base de datos retosdb");
        } catch (SQLException e) {
            System.out.println("❌ Error al conectar: " + e.getMessage());
        }
    }
}
